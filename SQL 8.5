SELECT I.ISSUESLIST_ID, issueslists.NAME, I.SUMMARY AS LIST_OF_TASKS, I.DESCRIPTION
FROM issues I
JOIN issueslists ON I.ISSUESLIST_ID = issueslists.ID;

SELECT I.ID, I.SUMMARY AS LIST_OF_TASKS, I.USER_ID_ASSIGNEDTO, U.ID, U.FIRSTNAME, U.LASTNAME
FROM issues I
JOIN USERS U ON I.USER_ID_ASSIGNEDTO = U.ID
ORDER BY USER_ID_ASSIGNEDTO;

SELECT U.ID, U.FIRSTNAME, U.LASTNAME, I.ISSUESLIST_ID, I.SUMMARY AS TASKS, COUNT(*) AS TASKS_NUMBER
FROM USERS U
JOIN issues I ON I.USER_ID_ASSIGNEDTO = U.ID
GROUP BY U.ID;
